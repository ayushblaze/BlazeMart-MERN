{
  "name": "blazemart",
  "version": "1.0.0",
  "description": "A MERN eCommerce App",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ayushblaze/BlazeMart-MERN.git"
  },
  "author": "Ayush Singh",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ayushblaze/BlazeMart-MERN/issues"
  },
  "homepage": "https://github.com/ayushblaze/BlazeMart-MERN#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "mongoose": "^5.10.6"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22"
  }
}
